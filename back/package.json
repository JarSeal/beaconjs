{
  "name": "beaconback",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "type": "module",
  "engines": {
    "node": ">=16.13.2",
    "yarn": ">=1.22.15"
  },
  "scripts": {
    "start": "cross-env NODE_ENV=production node --es-module-specifier-resolution=node index.js",
    "start-prod": "NODE_ENV=production SERVE_STATIC=production node -es-module-specifier-resolution=node index.js",
    "dev": "cross-env NODE_ENV=development nodemon --es-module-specifier-resolution=node index.js",
    "lint": "eslint .",
    "test": "cross-env NODE_ENV=test TZ=UTC TEARDOWN=true NODE_OPTIONS=--es-module-specifier-resolution=node jest --verbose --runInBand --detectOpenHandles --coverage",
    "test:watch": "cross-env NODE_ENV=test WATCH=true TZ=UTC NODE_OPTIONS=--es-module-specifier-resolution=node jest --watchAll --verbose --runInBand --detectOpenHandles",
    "start:test": "cross-env NODE_ENV=test node index.js",
    "prettify": "prettier --write ./**/*.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/JarSeal/full-stack-school-part3.git"
  },
  "author": "Kai Forsman",
  "license": "MIT",
  "dependencies": {
    "axios": "^0.27.2",
    "babel-jest": "^28.1.0",
    "bcrypt": "^5.0.0",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "crypto-js": "^4.1.1",
    "csurf": "^1.11.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-async-errors": "^3.1.1",
    "express-session": "^1.17.2",
    "marked": "^4.0.12",
    "mongoose": "^5.10.5",
    "mongoose-unique-validator": "^2.0.3",
    "morgan": "^1.10.0",
    "nodemailer": "^6.7.2",
    "prettier": "^2.6.2"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.18.2",
    "cross-env": "^7.0.2",
    "eslint": "^7.28.0",
    "eslint-config-import": "^0.13.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "2.25.4",
    "eslint-plugin-prettier": "4.0.0",
    "jest": "27.5.1",
    "nodemon": "^2.0.4"
  },
  "jest": {
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "js"
    ],
    "modulePathIgnorePatterns": [
      "<rootDir>/dist",
      "<rootDir>/mongo"
    ],
    "transform": {
      "^.+\\.(js)$": "babel-jest"
    },
    "globalSetup": "<rootDir>/test/globalSetup.js",
    "globalTeardown": "<rootDir>/test/globalTeardown.js",
    "testTimeout": 30000
  }
}
